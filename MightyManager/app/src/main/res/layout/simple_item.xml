<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="16dp"
    android:paddingRight="10dp"
    android:background="@drawable/border"
    android:clickable="true"
    android:id="@+id/simple_item_root">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/simple_item_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_assignment_returned_black_24dp"
        />

    <TextView
        android:id="@+id/simple_item_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment Title"
        android:textSize="22dp"
        android:fontFamily="serif"
        android:layout_toRightOf="@+id/simple_item_status"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/simple_item_employee_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Name"
        android:textSize="18dp"
        android:fontFamily="serif-monospace"
        android:layout_toRightOf="@+id/simple_item_status"
        android:layout_below="@+id/simple_item_title_txt"
        android:layout_marginLeft="10dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/simple_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src = "@android:drawable/ic_menu_edit"
        android:tint="@android:color/black"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
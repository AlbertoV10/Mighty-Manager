<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="16dp"
    android:paddingRight="10dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:id="@+id/main_list_root_view">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/main_list_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_assignment_returned_black_24dp"
        />
        <!--android:src="@android:drawable/editbox_background"-->
        <!--android:tint="@android:color/holo_green_dark"-->
        />

    <TextView
        android:id="@+id/main_list_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment Title"
        android:textSize="22dp"
        android:layout_toRightOf="@+id/main_list_status_icon"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/main_list_employee_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Name"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/main_list_status_icon"
        android:layout_below="@+id/main_list_title_txt"
        android:layout_marginLeft="10dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/main_list_edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src = "@android:drawable/ic_menu_edit"
        android:tint="@android:color/holo_red_dark"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
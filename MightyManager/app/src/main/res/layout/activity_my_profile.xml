<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.MyProfile">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_profile_screen_title"
        android:background="@drawable/gradient_color"
        android:text="My Profile"
        android:textSize="32sp"
        android:textColor="@color/main_theme"
        android:gravity="center"
        android:padding="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_profile_scrollview"
        android:layout_below="@+id/my_profile_screen_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/my_profile_linear_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_username"
                android:text="Username"
                android:textSize="18sp"
                android:padding="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_first_name"
                android:hint="First Name"
                android:padding="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_last_name"
                android:hint="Last Name"
                android:padding="15dp"
                />

            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/my_profile_password"-->
                <!--android:inputType="textPassword"-->
                <!--android:hint="Password"-->
                <!--android:padding="15dp"-->
                <!--/>-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_phone"
                android:hint="Phone #"
                android:inputType="phone"
                android:padding="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_employee_description"
                android:hint="Description"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_employee_type"
                android:text="My Status:"
                android:textSize="18sp"
                android:padding="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_change_password_button"
                android:text="Change Password"
                android:textColor="@color/main_theme"
                android:background="@drawable/button_gradient_color"
                android:padding="15dp"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.FirstTimeSignUp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_login_screen_title"
        android:background="@android:color/holo_blue_dark"
        android:text="Review Profile"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_login_message"
        android:text="Welcome Name! Below you will find your username and some personal information. You will use this username to login. Please verify your profile."
        android:layout_below="@id/first_login_screen_title"
        android:textSize="18sp"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/first_login_message"
        android:layout_marginTop="5dp"
        android:id="@+id/first_login_linear_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_login_username"
            android:text="Username"
            android:textSize="18sp"
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_login_first_name"
            android:hint="First Name"
            android:padding="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_login_last_name"
            android:hint="Last Name"
            android:padding="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_login_phone"
            android:hint="Phone #"
            android:inputType="phone"
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_login_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_login_verify_button"
        android:text="Verify"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_below="@id/first_login_linear_layout"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
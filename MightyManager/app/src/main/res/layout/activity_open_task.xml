<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.OpenTaskActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_title"
        android:background="@android:color/holo_blue_dark"
        android:text="Task Title"
        android:textSize="30sp"
        android:gravity="center"
        />
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_scrollview"
        android:layout_below="@+id/open_task_title">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/open_task_linear_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_employee"
        android:layout_below="@+id/open_task_title"
        android:text="Assigned to:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_employee_spinner"
        android:layout_below="@+id/open_task_desc_employee"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_address"
        android:layout_below="@id/open_task_employee_spinner"
        android:text="Address:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_address"
        android:layout_below="@id/open_task_desc_address"
        android:text="Address"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_status"
        android:layout_below="@id/open_task_address"
        android:text="Status:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_status_spinner"
        android:layout_below="@id/open_task_desc_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_customer_name"
        android:layout_below="@id/open_task_status_spinner"
        android:text="Customer Name:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_customer_name"
        android:layout_below="@id/open_task_desc_customer_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_customer_phone"
        android:layout_below="@id/open_task_customer_name"
        android:text="Customer Phone:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_customer_phone"
        android:layout_below="@id/open_task_desc_customer_phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_customer_email"
        android:layout_below="@id/open_task_customer_phone"
        android:text="Customer Email:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_customer_email"
        android:layout_below="@id/open_task_desc_customer_email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_task_notes"
        android:layout_below="@id/open_task_customer_email"
        android:text="Notes:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_task_notes"
        android:layout_below="@id/open_task_desc_task_notes"
        android:gravity="start"/>
    </LinearLayout>
</ScrollView>

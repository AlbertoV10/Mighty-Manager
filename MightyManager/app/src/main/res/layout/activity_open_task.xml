<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.OpenTaskActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_title"
        android:background="@android:color/holo_blue_dark"
        android:text="Task Title"
        android:textSize="30sp"
        android:gravity="center"
        android:inputType="none"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_employee"
        android:layout_below="@+id/open_task_title"
        android:text="Assigned to:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_employee_spinner"
        android:layout_below="@+id/open_task_desc_employee"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_address"
        android:layout_below="@id/open_task_employee_spinner"
        android:text="Address:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_address"
        android:layout_below="@id/open_task_desc_address"
        android:text="Address"
        android:inputType="none"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_desc_status"
        android:layout_below="@id/open_task_address"
        android:text="Status:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_status_spinner"
        android:layout_below="@id/open_task_desc_status"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_save_btn"
        android:layout_below="@+id/open_task_status_spinner"
        android:src="@drawable/ic_edit_black_24dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="15dp"
        android:layout_marginLeft="50dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_task_cancel_button"
        android:layout_below="@+id/open_task_status_spinner"
        android:layout_alignRight="@id/open_task_address"
        android:padding="15dp"
        android:src="@drawable/ic_clear_black_48dp"
        android:backgroundTint="@color/new_task"
        android:layout_marginRight="50dp"/>



</RelativeLayout>
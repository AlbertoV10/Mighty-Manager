<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.AddTaskActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_task_screen_name"
        android:background="@android:color/holo_blue_dark"
        android:text="Add Task"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_task_title"
        android:layout_below="@+id/add_task_screen_name"
        android:hint="Task Title"
        android:padding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_task_address"
        android:inputType="textPostalAddress"
        android:hint="Task Address"
        android:layout_below="@+id/add_task_title"
        android:padding="15dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_task_employee_spinner"
        android:layout_below="@+id/add_task_address"
        android:padding="15dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_task_save_button"
        android:layout_below="@+id/add_task_employee_spinner"
        android:src="@drawable/ic_save_black"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="15dp"
        android:layout_marginLeft="50dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_task_cancel_button"
        android:layout_below="@+id/add_task_employee_spinner"
        android:layout_alignRight="@id/add_task_employee_spinner"
        android:padding="15dp"
        android:src="@drawable/ic_clear"
        android:backgroundTint="@color/new_task"
        android:layout_marginRight="50dp"/>

</RelativeLayout>